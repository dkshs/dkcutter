{
  "compilerOptions": {
    "target": "ES2020",
    "jsx": "react-jsx",
    "lib": ["DOM", "ES2020"],
    "useDefineForClassFields": true,
    "module": "ESNext", 
    "moduleResolution": "bundler",
    "paths": {
      "@theme": ["./theme"],
      "@/components/*": ["./theme/components/*"],
    },
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["docs", "theme", "rspress.config.ts"],
  "mdx": {
    "checkMdx": true
  }
}
